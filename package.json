{
  "name": "react-express-project-starter",
  "version": "1.0.0",
  "description": "A starter project for running React and Express together",
  "scripts": {
    "install": "concurrently \"cd client&&yarn\" \"cd server&&yarn\"",
    "test": "concurrently \"cd client&&cross-env CI=true yarn test\" \"cd server&&yarn test\"",
    "build": "concurrently \"cd client && yarn build\"",
    "heroku-postbuild": "yarn build",
    "start": "concurrently --kill-others-on-fail \"yarn start:dev:server\" \"yarn start:client\"",
    "start:prod:server": "cd server&&yarn start",
    "start:client": "cd client&&yarn start",
    "start:dev:server": "cd server&&yarn dev"
  },
  "engines": {
    "node": "^10.11.0",
    "yarn": "^1.9.4"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules",
    "server/node_modules"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/songguoqiang/react-express-mongodb-starter"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
